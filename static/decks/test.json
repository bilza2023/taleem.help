        {
          "name": "line",
          "type": "math",
          "content": "$a^2 - b^2 = (a - b)(a + b)$",
          "showAt": 5,
          "spItems": [
            { "type": "spText", "content": "Difference of squares formula." },
            { "type": "spText", "content": "Transforms subtraction into two brackets." },
            { "type": "spText", "content": "Example: $x^2 - 16 = (x - 4)(x + 4)$." },
            { "type": "spImage", "content": "image.webp" }
          ]
        },
        {
          "name": "line",
          "type": "math",
          "content": "$(a + b)^2 = a^2 + 2ab + b^2$",
          "showAt": 15,
          "spItems": [
            { "type": "spText", "content": "Square of a binomial." },
            { "type": "spText", "content": "Middle term is always positive 2ab." },
            { "type": "spText", "content": "Frequently used in expansions." },
            { "type": "spImage", "content": "box.webp" }
          ]
        },
        {
          "name": "line",
          "type": "math",
          "content": "$(a - b)^2 = a^2 - 2ab + b^2$",
          "showAt": 25,
          "spItems": [
            { "type": "spText", "content": "Square of a difference." },
            { "type": "spText", "content": "The middle term becomes negative." },
            { "type": "spText", "content": "Common exam-tested identity." },
            { "type": "spImage", "content": "image.webp" }
          ]
        },
        {
          "name": "line",
          "type": "math",
          "content": "$a^3 + b^3 = (a + b)(a^2 - ab + b^2)$",
          "showAt": 35,
          "spItems": [
            { "type": "spText", "content": "Sum of cubes formula." },
            { "type": "spText", "content": "Notice the negative middle term." },
            { "type": "spText", "content": "Useful in higher algebra factorization." },
            { "type": "spImage", "content": "box.webp" }
          ]
        },
        {
          "name": "line",
          "type": "math",
          "content": "$a^3 - b^3 = (a - b)(a^2 + ab + b^2)$",
          "showAt": 45,
          "spItems": [
            { "type": "spText", "content": "Difference of cubes formula." },
            { "type": "spText", "content": "The middle term becomes positive." },
            { "type": "spText", "content": "Often confused with sum of cubes." },
            { "type": "spImage", "content": "image.webp" }
          ]
        }
      ]
